{
	"description": "cairo bindings and wrappers for the D programming language.",
	"targetName": "cairoD",
	"authors": [
		"Johannes Pfau",
		"Andrej Mitrovic"
	],
	"homepage": "https://github.com/cairoD/cairoD",
	"name": "cairod",
	"copyright": "Copyright Â© 2011-2015, Johannes Pfau",
	"license": "BSL-1.0",
	"-ddoxFilterArgs": ["--unittest-examples"],
	"dependencies": {
		"derelict-ft": "~>1.0.2",
	},
	"dependencies-posix": {
		"x11": "~>1.0.9"
	},
	"configurations": [
		{
			"name": "stlib",
			"targetType": "staticLibrary",
			"preBuildCommands": ["rdmd $PACKAGE_DIR/configure.d $PACKAGE_DIR"]
		},
		{
			"name": "stlib-minimal",
			"targetType": "staticLibrary"
		},
		{
			"name": "unittest",
			"targetType": "executable",
			"sourceFiles": ["unittest.d"],
			"libs": ["cairo"],
			"preBuildCommands": ["rdmd $PACKAGE_DIR/configure.d $PACKAGE_DIR"]
		},
		{
			"name": "unittest-minimal",
			"targetType": "executable",
			"sourceFiles": ["unittest.d"],
			"libs": ["cairo"]
		},
	]
}
